<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7F8"
    tools:context=".OtpActivity">

    <!-- Header Section -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/img_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verification"
        android:textColor="#1A1A1A"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/btn_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_back" />

    <TextView
        android:id="@+id/tv_verify_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:text="Verify OTP"
        android:textColor="#1A1A1A"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_back" />

    <TextView
        android:id="@+id/tv_instruction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:text="We have sent a 6-digit code to your email."
        android:textColor="#4A4A4A"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_verify_otp" />

    <!-- OTP Input Boxes -->
    <LinearLayout
        android:id="@+id/ll_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_instruction">

        <EditText
            android:id="@+id/et_otp1"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_margin="4dp"
            android:background="@drawable/ic_launcher_background"
            android:backgroundTint="#E8F3F3"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textColor="#1A1A1A"/>

        <EditText
            android:id="@+id/et_otp2"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_margin="4dp"
            android:background="@drawable/ic_launcher_background"
            android:backgroundTint="#E8F3F3"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textColor="#1A1A1A"/>

        <EditText
            android:id="@+id/et_otp3"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_margin="4dp"
            android:background="@drawable/ic_launcher_background"
            android:backgroundTint="#E8F3F3"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textColor="#1A1A1A"/>

        <EditText
            android:id="@+id/et_otp4"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_margin="4dp"
            android:background="@drawable/ic_launcher_background"
            android:backgroundTint="#E8F3F3"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textColor="#1A1A1A"/>

        <EditText
            android:id="@+id/et_otp5"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_margin="4dp"
            android:background="@drawable/ic_launcher_background"
            android:backgroundTint="#E8F3F3"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textColor="#1A1A1A"/>

        <EditText
            android:id="@+id/et_otp6"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_margin="4dp"
            android:background="@drawable/ic_launcher_background"
            android:backgroundTint="#E8F3F3"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textColor="#1A1A1A"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_resend_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Resend Code"
        android:textColor="#5E9CB0"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_otp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_verify"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#00E5FF"
        android:text="Verify &amp; Proceed"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>