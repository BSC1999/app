<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical">

    <!-- USER / ROLE -->
    <TextView
        android:id="@+id/tv_log_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Admin Sarah"
        android:textColor="#1A1A1A"
        android:textSize="13sp"
        android:textStyle="bold" />

    <!-- ACTION / MODULE -->
    <TextView
        android:id="@+id/tv_log_action"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:layout_marginStart="8dp"
        android:text="Logged in to the system"
        android:textColor="#4A4A4A"
        android:textSize="13sp" />

    <!-- STATUS / DATE-TIME -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_log_status_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Success"
            android:textColor="#27AE60"
            android:textSize="13sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_log_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023-10-24 10:30 AM"
            android:textColor="#8BBABB"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>