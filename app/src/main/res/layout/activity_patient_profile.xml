<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7F8"
    tools:context=".PatientProfileActivity">

    <!-- Header Section -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="52dp"
            android:paddingBottom="16dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:src="@drawable/img_8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patient Profile"
                android:textColor="#1A1A1A"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_container"
        app:layout_constraintTop_toBottomOf="@id/header_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Profile Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_profile_pic"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/img_21"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">
                    <TextView
                        android:id="@+id/tv_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Patient Name"
                        android:textColor="#1A1A1A"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_profile_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID: 123456789"
                        android:textColor="#5E9CB0"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/tv_profile_age_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age: 32 | Gender: Male"
                        android:textColor="#5E9CB0"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Patient Details -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact"
                android:textColor="#1A1A1A"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:id="@+id/tv_display_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+91 0000000000"
                android:textColor="#5E9CB0"
                android:textSize="16sp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="#1A1A1A"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:id="@+id/tv_display_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address details..."
                android:textColor="#5E9CB0"
                android:textSize="16sp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Initial Chief Complaint"
                android:textColor="#1A1A1A"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:id="@+id/tv_display_initial_complaint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Complaint details..."
                android:textColor="#5E9CB0"
                android:textSize="16sp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medical History"
                android:textColor="#1A1A1A"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:id="@+id/tv_display_medical_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="History details..."
                android:textColor="#5E9CB0"
                android:textSize="16sp"
                android:layout_marginBottom="32dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X-rays &amp; Scans"
                android:textColor="#1A1A1A"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="24dp">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_profile_camera"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#00E5FF"
                    android:text="Camera"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    app:cornerRadius="12dp" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_profile_upload"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#00E5FF"
                    android:text="Upload"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    app:cornerRadius="12dp" />
            </LinearLayout>

            <GridLayout
                android:id="@+id/gl_patient_xrays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:alignmentMode="alignMargins"
                android:layout_marginBottom="32dp">
                <!-- X-ray card 1 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_xray_1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:strokeColor="#E0E0E0"
                    app:strokeWidth="1dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:id="@+id/iv_xray_item_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@android:drawable/ic_menu_gallery"
                                app:tint="#5E9CB0" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="X-ray_01.jpg"
                                android:textColor="#1A1A1A"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <ImageButton
                            android:id="@+id/btn_menu_xray_1"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_vertical_dots"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_margin="4dp" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- X-ray card 2 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_xray_2"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:strokeColor="#E0E0E0"
                    app:strokeWidth="1dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:id="@+id/iv_xray_item_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@android:drawable/ic_menu_gallery"
                                app:tint="#5E9CB0" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="X-ray_02.jpg"
                                android:textColor="#1A1A1A"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <ImageButton
                            android:id="@+id/btn_menu_xray_2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_vertical_dots"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_margin="4dp" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
            </GridLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next Appointment"
                android:textColor="#1A1A1A"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeColor="#E0E0E0"
                app:strokeWidth="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_display_next_schedule"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="No schedule set"
                        android:textColor="#5E9CB0"
                        android:textSize="16sp" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_fix_schedule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#00E5FF"
                        android:text="Book Appointment"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        app:cornerRadius="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Treatment &amp; Payment Description"
                android:textColor="#1A1A1A"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>
            <EditText
                android:id="@+id/et_treatment_payment_notepad"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/ic_launcher_background"
                android:backgroundTint="#FFFFFF"
                android:gravity="top"
                android:hint="Add notes here..."
                android:inputType="textMultiLine"
                android:padding="16dp"
                android:scrollbars="vertical"
                android:textSize="16sp"
                android:layout_marginBottom="20dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_profile_save_pdf"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="#00E5FF"
                android:text="Save as PDF"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                android:layout_marginBottom="40dp" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottom_nav_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="0dp"
        app:cardElevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:strokeWidth="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout android:id="@+id/nav_home_custom" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
                <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/img_16" app:tint="@color/nav_icon_unselected" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Home" android:textColor="@color/nav_icon_unselected" android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout android:id="@+id/nav_patients_custom" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
                <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <View android:layout_width="48dp" android:layout_height="32dp" android:layout_gravity="center" android:background="@drawable/circle_bg" />
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:layout_gravity="center" android:src="@drawable/img_17" app:tint="@color/nav_icon_selected" />
                </FrameLayout>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Patients" android:textColor="@color/nav_icon_selected" android:textSize="12sp" android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout android:id="@+id/nav_schedule_custom" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
                <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/img_18" app:tint="@color/nav_icon_unselected" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Schedule" android:textColor="@color/nav_icon_unselected" android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout android:id="@+id/nav_ai_custom" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
                <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/img_19" app:tint="@color/nav_icon_unselected" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="AI Assistant" android:textColor="@color/nav_icon_unselected" android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout android:id="@+id/nav_more_custom" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
                <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/img_20" app:tint="@color/nav_icon_unselected" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="More" android:textColor="@color/nav_icon_unselected" android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>