<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TeethNode">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/circle_bg</item>
        <item name="android:backgroundTint">#1C252E</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#8E9AA7</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TeethNodeActiveRed" parent="TeethNode">
        <item name="android:backgroundTint">#2D1B1B</item>
        <item name="android:textColor">#FF4B4B</item>
    </style>

    <style name="TeethNodeActiveBlue" parent="TeethNode">
        <item name="android:backgroundTint">#1B272D</item>
        <item name="android:textColor">#3498DB</item>
    </style>

    <style name="TeethNodeActiveYellow" parent="TeethNode">
        <item name="android:backgroundTint">#2D271B</item>
        <item name="android:textColor">#F1C40F</item>
    </style>

    <style name="TeethNodeLight">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/circle_bg</item>
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#1A1A1A</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TeethNodeLightRed" parent="TeethNodeLight">
        <item name="android:backgroundTint">#FEEBEB</item>
        <item name="android:textColor">#FF4B4B</item>
    </style>

    <style name="TeethNodeLightBlue" parent="TeethNodeLight">
        <item name="android:backgroundTint">#EBF5FB</item>
        <item name="android:textColor">#3498DB</item>
    </style>

    <style name="TeethNodeLightYellow" parent="TeethNodeLight">
        <item name="android:backgroundTint">#FEF9E7</item>
        <item name="android:textColor">#F1C40F</item>
    </style>
</resources>