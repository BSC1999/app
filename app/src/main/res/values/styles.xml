<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TeethNode">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/circle_outline</item>
        <item name="android:backgroundTint">#E0E0E0</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TeethNodeDark" parent="TeethNode">
        <item name="android:backgroundTint">#1C252E</item>
        <item name="android:textColor">#8E9AA7</item>
    </style>

    <style name="TeethNodeActiveRed" parent="TeethNode">
        <item name="android:backgroundTint">#FF4B4B</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TeethNodeActiveBlue" parent="TeethNode">
        <item name="android:backgroundTint">#3498DB</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TeethNodeActiveYellow" parent="TeethNode">
        <item name="android:backgroundTint">#F1C40F</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TeethNodeLight">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/circle_outline</item>
        <item name="android:backgroundTint">#E0E0E0</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TeethNodeLightRed" parent="TeethNodeLight">
        <item name="android:backgroundTint">#FF4B4B</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TeethNodeLightBlue" parent="TeethNodeLight">
        <item name="android:backgroundTint">#3498DB</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TeethNodeLightYellow" parent="TeethNodeLight">
        <item name="android:backgroundTint">#F1C40F</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>